<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

    <div class="container">

        {% if app.user %}
            <nav class="navbar py-4" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="">
                        <h1><img src="/assets/Logo_Amet.png" alt="logo"></h1>
                    </a>

                    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>

                <div id="navbarBasicExample" class="navbar-menu">
                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a class="button is-info" href="{{ path('app_logout') }}">
                                    <strong>Se déconnecter</strong>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            {% else %}
            <nav class="navbar" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="#">
                        <h1><img src="/assets/Logo_Amet.png" alt="logo"></h1>
                    </a>

                    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>

                <div id="navbarBasicExample" class="navbar-menu">
                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a class="button is-info" href="{{ path('app_register') }}">
                                    <strong>S'inscrire</strong>
                                </a>
                                <a class="button is-light" href="{{ path('app_login') }}">
                                    Se connecter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        {% endif %}

        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
        {#{% if app.user %}#}
        <div class="columns">
            <div class="column is-one-quarter my-5">

                <aside class="menu">
                    <ul class="menu-list">
                        <li><a href="{{ path('images_index') }}"><i class="fal fa-camera-retro mr-4"></i>Photos</a></li>
                        <li><a href="{{ path('albums_index') }}"><i class="fal fa-images mr-4"></i>Albums</a></li>
                        <li><a href="{{ path('favoris_index') }}"><i class="fal fa-star mr-4"></i>Favoris</a></li>
                        {#<li><a href="{{ path('partage_index') }}"><i class="fal fa-users mr-4"></i>Partage</a></li>
                        <li><a href="{{ path('corbeille_index') }}"><i class="fal fa-trash-alt mr-4"></i>Corbeille</a></li>#}
                    </ul>
                </aside>

            </div>

        {#{% elseif not app.user %}#}
        {% endif %}




            <div class="{{ app.user ? 'column auto' : '' }}">
                {% block body %}{% endblock %}
            </div>
        </div>

    </div>


        <footer class="footer">
            <div class="content has-text-centered">
                <p>
                    <strong>Amet</strong> by Tristan & Chloé.
                </p>
            </div>
        </footer>
    </body>
</html>
