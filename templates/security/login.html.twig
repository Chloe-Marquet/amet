{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">

    <form method="post" class="box column is-one-third is-offset-one-third my-6 px-6">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class='is-flex is-flex-direction-row is-justify-content-center'>
            <img src="/assets/Logo_Amet.png" alt="logo" width="80">
        </div>

        <h1 class="has-text-centered my-5 is-size-4 has-text-weight-light">Connexion</h1>

        {# Email #}
        <div class="field">
            <p class="control has-icons-left has-icons-right">
                <input class="input" type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="prenom.nom@example.com" required autofocus>
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                </span>
            </p>
        </div>

        {#<label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>#}

        {# Password #}
        <div class="field">
            <p class="control has-icons-left">
                <input class="input" type="password" name="password" id="inputPassword" placeholder="Mot de passe" required>
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
            <p class="has-text-right"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a></p>
        </div>

        {#<label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>#}

        {# Se connecter #}
        <div class="field mt-5">
            <p class="control has-text-centered">
                <button class="button is-info" type="submit">
                    Se connecter
                </button>
            </p>
        </div>

    {#    <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>#}


        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}


    </form>


</div>
{% endblock %}
